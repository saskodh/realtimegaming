<!DOCTYPE html>
<html>
    <head>
        <link rel='stylesheet' href='/public/stylesheets/game.css' />

        <!-- Latest compiled and minified CSS -->
        <link rel="stylesheet" href="/public/bootstrap/css/bootstrap.min.css">

        <!-- Optional theme -->
        <link rel="stylesheet" href="/public/bootstrap/css/bootstrap-theme.min.css">

        <script src="/public/javascripts/jquery.js"></script>

        <!-- Latest compiled and minified JavaScript -->
        <script src="/public/bootstrap/js/bootstrap.min.js"></script>

        <script src="/socket.io/socket.io.js"></script>

        <script src="/public/javascripts/<%= game.id%>.js"></script>

        <script src="/public/javascripts/game.js"></script>
    </head>
    <body>
        <div id="header" class="row">
            <div class="col-md-10">
                <p><%= game.name %>: <%= room %></p>
            </div>
            <div class="col-md-2">
                <button id="btnLeaveRoom" type="button" class="btn btn-danger">Leave room</button>
            </div>
        </div>
        <div id="main">
            <div id="gameDiv" style="height: 300px; text-align: center; background-color: lightblue">

                <!--Insert switch for all other games-->
            </div>
            <div id="controls" class="row">
                <div id="chatDiv" class="col-md-9">
                    <div class="panel panel-default">
                        <div class="panel-heading">Chat</div>
                        <div class="panel-body">
                            <div>
                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <td class="chatTimeCol">Time</td>
                                            <td class="chatPlayerCol">Player</td>
                                            <td class="chatMsgCol">Message</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <!--<tr>
                                            <td class="chatTimeCol">18:28</td>
                                            <td class="chatPlayerCol">Sasko</td>
                                            <td class="chatMsgCol">Zdravo!</td>
                                        </tr>-->
                                    </tbody>
                                </table>
                            </div>
                            <div>
                                <div class="input-group">
                                    <input type="text" id="txtChatMessage" class="form-control">
                                    <span class="input-group-btn">
                                        <button id="btnSend" class="btn btn-default" type="button">Send!</button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="panel panel-default">
                        <div class="panel-heading">Players</div>
                        <div class="panel-body">
                            <div id="playersDiv">
                                <!--<div id="playerTemplate">
                                    <span class="glyphicon glyphicon-user" style="color: limegreen"> </span>
                                    <span class="player">Sashe</span>
                                </div>-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="footer"></div>
    </body>
</html>